datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  authorId    Int?
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishedAt DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Author {
  bio       String?
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}
